<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_al_tahlol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg2"
    tools:context="com.example.hp.hej_omra.AlTahlolActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/Eltahalol"
            android:gravity="center"
            style="@style/fontForHeads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/Tahlol_Im"
            android:src="@drawable/halq"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/Tahlol_Tv"
            style="@style/fontForsubject"
            android:inputType="textMultiLine"
            android:text="@string/tahlol"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <!--
    <Button
        android:layout_alignParentBottom="true"
        style="@style/fontForHeads"
        android:id="@+id/Tahlol_Done"
        android:text="@string/done"
        android:background="#36acba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        -->

</RelativeLayout>
